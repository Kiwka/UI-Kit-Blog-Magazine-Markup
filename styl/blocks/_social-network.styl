//Facebook+Twitter section
.network
	position relative
	height 150px
	color white
	&__number
		position absolute
		bottom 23px
		left 23px
		font-weight 700
	&__status
		position absolute
		bottom 23px
		right 53px
		font-weight 300
	&:before
		font-family "fontello"
		position absolute
		left 23px
		top 23px
		font-size 42px
	&-facebook
		background-color $facebook_color
		&:before
			content '\'+$icon-facebook
	&-twitter
		background-color $twitter_color
		&:before
			content '\'+$icon-twitter